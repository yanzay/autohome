<form method="POST" action="/settings" class="form-horizontal" role="form">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Yahoo Weather</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label for="yahooCityId" class="col-sm-3 control-label">City ID</label>
        <div class="col-sm-3">
          <input type="text" class="form-control" id="yahooCityId" name="YahooCityId" value="{{.YahooCityId}}">
        </div>
      </div>
      <div class="form-group">
        <label for="yahooTempUnit" class="col-sm-3 control-label">Temperature Unit</label>
        <div class="col-sm-3">
          <select name="YahooTempUnit" class="form-control">
            <option value="c"{{ if eq .YahooTempUnit "c"}} selected="selected"{{end}}>C</option>
            <option value="f"{{ if eq .YahooTempUnit "f"}} selected="selected"{{end}}>F</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Habrahabr</h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <label class="checkbox-inline"><input type="checkbox" name="habs[]" value="ruby">Ruby</input></label>
          <label class="checkbox-inline"><input type="checkbox" name="habs[]" value="ror">Ruby on Rails</input></label>
          <label class="checkbox-inline"><input type="checkbox" name="habs[]" value="go">Go</input></label>
        </div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-3">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </div>
</form>
